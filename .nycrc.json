{
  "$schema": "https://json.schemastore.org/nycrc.json",
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": false,
  "extensions": [".ts"],
  "reporter": ["text", "html", "lcov"],
  "exclude": [
    "bin",
    "dist",
    "node_modules",
    "src/commands",
    "src/utils/testing.ts",
    "**/*.test.ts",
    "**/*.d.ts",
    "coverage",
    "eslint.config.cjs"
  ]
}
